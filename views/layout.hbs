        {{!-- when sessions are active remove this comment {{#if userExists}} --}}
        <ul class='navbar-nav me-auto mb-lg-0'>
        {{!-- <ul class='navbar-nav mr-auto'> --}}
          <li class='nav-item'>
            <a class='nav-link' href='/about'>About SpeedAisle</a>
          </li>
          {{#if loggedIn}}
          <li class='nav-item'>
            <a class='nav-link' href='/list'>My List</a>
          </li>
          <li class='nav-item'>
            <a class='nav-link' href='/location'>My Local Store</a>
          </li>
          {{/if}}
        </ul>

        {{!-- navbar right items --}}
        {{#if loggedIn}}
        <ul class='navbar-nav navbar-right'>
          <li class='nav-item'>
            <a class='nav-link' href='/logout'>Logout</a>
          </li>
        </ul>
        {{/if}}
      </div>
    </nav>

    {{{body}}}
